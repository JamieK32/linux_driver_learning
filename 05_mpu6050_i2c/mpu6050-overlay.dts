/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2711";

    fragment@0 {
        target = <&i2c1>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";

            mpu6050@68 {
                // compatible = "invensense,mpu6050";
                compatible = "mycompany,mpu6050-minimal";
                reg = <0x68>;
                status = "okay";
            };
        };
    };
};